    <scriptfile>script.php</scriptfile>

    <install>
        <sql>
            <file charset="utf8" driver="mysql">install/install.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file charset="utf8" driver="mysql">install/uninstall.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <folder>addons</folder>
        <folder>assets</folder>
